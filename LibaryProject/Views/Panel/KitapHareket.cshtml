@using LibaryProject.Models.Entity
@model List<TblHareket>
@{
    ViewBag.Title = "KitapHareket";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}
<br />
<h2>Kitap Geçmişi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Kitap Adı</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
    </tr>
    @foreach (var k in Model)
        {
            <tr>
                <td>@k.TblKitap.Ad</td>
                <td>@Convert.ToDateTime(k.AlisTarih).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(k.UyeGetirTarih).ToString("dd/MM/yyyy")</td>
            </tr>
        }
</table>

