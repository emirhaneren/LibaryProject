@model LibaryProject.Models.Entity.TblYazar
@{
    ViewBag.Title = "GetYazar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using(Html.BeginForm("UpdateYazar","Yazar",FormMethod.Post))
            {
                <div style="margin-bottom:15px"></div>
                <div class="form-group">
                    <div style="margin-bottom:15px">
                        <label>Yazar ID</label>
                        @Html.TextBoxFor(yzr => yzr.ID, new { @class = "form-control" })
                    </div>
                    <div style="margin-bottom:15px">
                        <label>Yazar Adı</label>
                        @Html.TextBoxFor(yzr => yzr.Ad, new { @class = "form-control" })
                    </div>
                    <div style="margin-bottom:15px">
                        <label>Yazar Soyadı</label>
                        @Html.TextBoxFor(yzr => yzr.Soyad, new { @class = "form-control" })
                    </div>
                    <div style="margin-bottom:15px">
                        <label>Yazar Detay</label>
                        @Html.TextAreaFor(yzr => yzr.Detay, new { @class = "form-control" })
                    </div>
                    <button class="btn btn-warning">Yazar Bilgilerini Güncelle</button>
                </div>
            }

