
@{
    ViewBag.Title = "Gonderilen";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}
<br />
<h2>Göderilen Mesajlar</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Alıcı</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Alıcı</td>
            <td>@x.Konu</td>
            <td>@x.Mesaj</td>
            <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>

