@model LibaryProject.Models.Entity.TblAdmin
@{
    ViewBag.Title = "GetAdmin";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@*Html Helper komutları ile güncelleme işlemi*@
@using (Html.BeginForm("UpdateAdmin", "Ayarlar", FormMethod.Post))
{
    <div style="margin-bottom:20px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(k => k.Mail)
        @Html.TextBoxFor(k => k.Mail, new { @class = "form-control" })
        <br />
        @Html.LabelFor(k => k.Sifre)
        @Html.PasswordFor(k => k.Sifre, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
