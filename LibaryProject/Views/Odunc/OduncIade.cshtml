@model LibaryProject.Models.Entity.TblHareket
@{
    ViewBag.Title = "OduncIade";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@*Html Helper komutları ile güncelleme işlemi*@
@using (Html.BeginForm("OduncGuncelle", "Odunc", FormMethod.Post))
{
    <div style="margin-bottom:20px"></div>
    <div class="form-group">
        <label>Hareket ID</label>
        @Html.TextBoxFor(odc => odc.ID, new { @class = "form-control" })
        <br />
        <label>Kitap Adı</label>
        @Html.TextBoxFor(odc => odc.TblKitap.Ad, new { @class = "form-control" })
        <br />
        <label>Üye</label>
        @Html.TextBoxFor(odc => odc.TblUyeler.Ad, new { @class = "form-control" })
        <br />
        <label>Personel</label>
        @Html.TextBoxFor(odc => odc.TblPersonel.Personel, new { @class = "form-control" })
        <br />
        <label>Alış Tarihi</label>
        @Html.TextBoxFor(odc => odc.AlisTarih, "{0: dd/MM/yyyy}", new { @class = "form-control" })
        <br />
        <label>İade Tarihi</label>
        @Html.TextBoxFor(odc => odc.IadeTarih, "{0: dd/MM/yyyy}", new { @class = "form-control" })
        <br />
        <label>Teslim Tarihi</label>
        <input type="text" name="UyeGetirTarih" class="form-control" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <label>Geç Gelen Gün Sayısı</label>
        <input type="text" class="form-control" id="GecInput" value="@ViewBag.dgr" />
        <br />
    </div>
    <div>
        <button class="btn btn-info" style="background-color:#c30bc4">Ödünç Kitabı Geri Al</button>
    </div>
}

