@*istelemek için Gereken Syntax*@
@using LibaryProject.Models.Entity;
@using PagedList
@using PagedList.Mvc
@*PagedList model*@
@model PagedList.IPagedList<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>

@*Kategori Listeleme*@
<table class="table table-striped">
    <tr style="background-color:rgb(239, 144, 12)">
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </trstyle="background-color:rgb(239,>
    @*Tabloda Listeleme işlemi*@
    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.ID</td>
            <td>@ktg.Ad</td>
            <td><a href="/Kategori/DeleteKategori/@ktg.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/GetKategori/@ktg.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
@*Next page button*@
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
@*Yeni Öğe Butonu*@
<a href="/Kategori/AddKategori" class="btn btn-primary">Yeni Kategori Ekle</a>

